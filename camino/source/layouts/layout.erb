                  </article>


                  <% end %>
									<!-- Mini Post -->




								</div>
							</section>

						<!-- Posts List -->
            <% if page_articles.count > n %>
							<section>
								<ul class="posts">
                  <% page_articles.drop(n).each_with_index do |article, i| %>

									<li>
										<article>
											<header>
                        <h3><%= link_to article.title, article %></h3>
                        <time class="published" datetime="<%=article.date%>"><%=I18n.localize(article.date, :format => "%-d %B %Y")%></time>
